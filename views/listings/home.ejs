  <h2 class="text-danger fw-bold text-center mb-4">User Reviews</h2>
  <div class="row justify-content-center mb-5">
    <% reviews.forEach(review => { %>
      <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="review-card p-3 shadow-sm">
          <h6 class="text-dark mb-2 fw-bold">
            <i class="fas fa-user-circle me-1 text-secondary"></i> <%= review.owner.username %>
          </h6>
          <p class="text-primary small mb-2"><%= review.comment %></p>
          <div class="stars">
            <% for(let i = 1; i <= 5; i++) { %>
              <% if(i <= review.rating) { %>
                <i class="fa-solid fa-star filled"></i>
              <% } else { %>
                <i class="fa-regular fa-star"></i>
              <% } %>
            <% } %>
          </div>
          <div class="text-muted small"><%= new Date(review.createdAt).toLocaleDateString() %></div>
        </div>
      </div>
    <% }) %>
  </div>
  

  <div class="text-center mb-5">
    <a href="/new/review" class="btn btn-glow px-4 py-2 shadow-lg" style="border-radius: 40px;">
