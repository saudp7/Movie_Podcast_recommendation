<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <% layout("layouts/boilerplate") -%>
  <style>
    .tab { display: none; }
    .tab.active { display: block; }
    .nav-tabs button { cursor: pointer; }
  </style>
</head>
<body class="bg-dark text-light">
  <div class="container mt-5">
    <h1 class="text-center mb-4">Admin Dashboard</h1>
    
    <!-- Tabs -->
    <ul class="nav nav-tabs" id="adminTabs">
      <li class="nav-item"><button class="nav-link active" data-tab="movies">Movies</button></li>
      <li class="nav-item"><button class="nav-link" data-tab="webseries">Web Series</button></li>
      <li class="nav-item"><button class="nav-link" data-tab="cartoons">Cartoons</button></li>
      <li class="nav-item"><button class="nav-link" data-tab="podcasts">Podcasts</button></li>
      <li class="nav-item"><button class="nav-link" data-tab="users">Users</button></li>
    </ul>

    <!-- MOVIES -->
    <div class="tab active" id="movies">
      <h2 class="mt-4">Add Movie</h2>
      <form action="/admin/movies" method="POST" enctype="multipart/form-data">
        <div class="mb-2"><input class="form-control" name="title" placeholder="Title" required></div>
        <div class="mb-2"><input class="form-control" name="genre" placeholder="Genre (comma-separated)" required></div>
        <div class="mb-2"><input class="form-control" name="year_of_release" placeholder="Year of Release" required></div>
        <div class="mb-2"><input class="form-control" name="where_to_watch" placeholder="Where to Watch" required></div>
        <div class="mb-2"><input class="form-control" type="file" name="iconpath" required></div>
        <div class="mb-2"><input class="form-control" type="file" name="imagepath" required></div>
        <div class="mb-2"><input class="form-control" name="imdb_rating" type="number" step="0.1" placeholder="IMDb Rating" required></div>
        <div class="mb-2"><input class="form-control" name="languages" placeholder="Languages (comma-separated)" required></div>
        <button class="btn btn-primary">Add Movie</button>
      </form>
    </div>

    <!-- WEB SERIES -->
    <div class="tab" id="webseries">
      <h2 class="mt-4">Add Web Series</h2>
      <form action="/admin/series" method="POST" enctype="multipart/form-data">
        <div class="mb-2"><input class="form-control" name="title" placeholder="Title" required></div>
        <div class="mb-2"><input class="form-control" name="genre" placeholder="Genre (comma-separated)" required></div>
        <div class="mb-2"><input class="form-control" name="year_of_release" type="number" placeholder="Year of Release" required></div>
        <div class="mb-2"><input class="form-control" name="seasons" type="number" placeholder="Seasons" required></div>
        <div class="mb-2"><input class="form-control" name="where_to_watch" placeholder="Where to Watch" required></div>
        <div class="mb-2"><input class="form-control" type="file" name="iconpath" required></div>
        <div class="mb-2"><input class="form-control" type="file" name="imagepath" required></div>
        <div class="mb-2"><input class="form-control" name="imdb_rating" type="number" step="0.1" placeholder="IMDb Rating" required></div>
        <div class="mb-2"><input class="form-control" name="languages" placeholder="Languages (comma-separated)" required></div>
        <button class="btn btn-primary">Add Web Series</button>
      </form>
    </div>

    <!-- CARTOONS -->
    <div class="tab" id="cartoons">
      <h2 class="mt-4">Add Cartoon</h2>
      <form action="/admin/cartoons" method="POST" enctype="multipart/form-data">
        <div class="mb-2"><input class="form-control" name="title" placeholder="Title" required></div>
        <div class="mb-2"><input class="form-control" name="genre" placeholder="Genre" required></div>
        <div class="mb-2"><input class="form-control" name="year_of_release" type="number" placeholder="Year of Release" required></div>
        <div class="mb-2"><input class="form-control" name="where_to_watch" placeholder="Where to Watch" required></div>
        <div class="mb-2">
          <label for="iconpath">Icon Path</label>
          <input class="form-control" type="file" name="iconpath" required>
        </div>
        <div class="mb-2">
          <label for="imagepath">Image Path</label>
          <input class="form-control" type="file" name="imagepath" required>
        </div>
        <div class="mb-2"><input class="form-control" name="imdb_rating" type="number" step="0.1" placeholder="IMDb Rating" required></div>
        <div class="mb-2"><input class="form-control" name="languages" placeholder="Languages (comma-separated)" required></div>
        <button class="btn btn-primary">Add Cartoon</button>
      </form>
    </div>

    <!-- PODCASTS -->
    <div class="tab" id="podcasts">
      <h2 class="mt-4">Add Podcast</h2>
      <form action="/admin/podcasts" method="POST" enctype="multipart/form-data">
        <div class="mb-2"><input class="form-control" name="title" placeholder="Title" required></div>
        <div class="mb-2"><input class="form-control" name="duration" placeholder="Duration" required></div>
        <div class="mb-2"><input class="form-control" name="platform" placeholder="Platforms (comma-separated)" required></div>
        <div class="mb-2"><input class="form-control" type="file" name="iconpath" required></div>
        <div class="mb-2"><input class="form-control" type="file" name="imagepath" required></div>
        <div class="mb-2"><input class="form-control" name="ratings" type="number" step="0.1" max="5" placeholder="Ratings (0-5)"></div>
        <div class="mb-2"><input class="form-control" name="genre" placeholder="Genres (comma-separated)" required></div>
        <div class="mb-2"><input class="form-control" name="host" placeholder="Hosts (comma-separated)" required></div>
        <div class="mb-2"><input class="form-control" name="languages" placeholder="Languages (comma-separated)" required></div>
        <button class="btn btn-primary">Add Podcast</button>
      </form>
    </div>

    <!-- USERS -->
    <div class="tab" id="users">
      <h2 class="mt-4">Manage Users</h2>
      <% if (typeof users !== 'undefined' && users.length > 0) { %>
        <table class="table table-bordered table-dark">
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Gender</th>
              <th>Country</th>
              <th>Actions</th>
             
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td>
                  <% if (user.isAdmin) { %>
                  
                    <i class="fas fa-crown" style="font-size:24px;color: rgb(232, 174, 15);"></i> <%= user.username %>
                   
                  <% } else { %>
                    <%= user.username %>
                  <% } %>
                  
                </td>
                <td><%= user.email %></td>
                <td><%= user.phoneNum %></td>
                <td><%= user.gender %></td>
                <td><%= user.country %></td>
                <td>
                  <form action="/admin/users/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button class="btn btn-danger btn-sm">Delete</button>
                  </form>
                  <a href="/admin/users/<%= user._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No users found.</p>
      <% } %>
    </div>
  </div>

  <!-- Tab Script -->
  <script>
    document.querySelectorAll('.nav-link').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.nav-link').forEach(b => b.classList.remove('active'));
        document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
        btn.classList.add('active');
        document.getElementById(btn.dataset.tab).classList.add('active');
      });
    });
  </script>

  

</body>
</html>
