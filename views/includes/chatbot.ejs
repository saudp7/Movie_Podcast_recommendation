<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Smart Movie ChatBot</title>
  <style>
    /* Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      background: linear-gradient(135deg, #000000, #1a1a1a, #000000);
      height: 100vh;
      overflow: hidden;
      color: #f5f5f5;
    }

    /* Hamburger Menu */
    #hamburger-menu {
      position: fixed;
      top: 20px;
      right: 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 30px;
      height: 30px;
      cursor: pointer;
    }

    #hamburger-menu div {
      width: 30px;
      height: 5px;
      background-color: #fff;
      transition: all 0.3s ease;
    }

    /* Chatbot Menu */
    #chatbot-menu {
      position: fixed;
      top: 0;
      right: -320px;
      width: 320px;
      height: 100vh;
      background: rgba(20, 20, 20, 0.9);
      transition: right 0.3s ease;
      display: flex;
      flex-direction: column;
      box-shadow: 0 0 25px rgba(255, 0, 70, 0.3);
    }

    #chatbot-header {
      background: rgba(255, 0, 70, 0.1);
      padding: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid rgba(255, 0, 70, 0.2);
    }

    #chatlog {
      flex: 1;
      padding: 12px;
      overflow-y: auto;
    }

    .bot, .user {
      margin: 10px;
      padding: 12px 16px;
      border-radius: 14px;
      max-width: 80%;
      font-size: 14px;
      line-height: 1.4;
      word-break: break-word;
    }

    .bot {
      background: rgba(255, 255, 255, 0.1);
      color: #ddd;
      align-self: flex-start;
    }

    .user {
      background: rgba(255, 0, 70, 0.9);
      color: #fff;
      align-self: flex-end;
    }

    #input-area {
      display: flex;
      align-items: center;
      gap: 6px;
      padding: 8px;
      border-top: 1px solid rgba(255, 0, 70, 0.2);
      background: rgba(20, 20, 20, 0.9);
    }

    #input-area input {
      flex: 1;
      padding: 10px;
      border: none;
      border-radius: 10px;
      font-size: 14px;
      background: rgba(40, 40, 40, 0.9);
      color: #f5f5f5;
    }

    #input-area button {
      border: none;
      padding: 8px 12px;
      border-radius: 10px;
      background: rgba(255, 0, 70, 0.9);
      color: #fff;
      cursor: pointer;
    }

    /* Responsive */
    @media (max-width: 400px) {
      #chatbot-menu {
        width: 100%;
      }
    }
  </style>
</head>
<body>

<!-- Hamburger Menu -->
<div id="hamburger-menu" onclick="toggleChatbot()">
  <div></div>
  <div></div>
  <div></div>
</div>

<!-- Chatbot Menu -->
<div id="chatbot-menu">
  <div id="chatbot-header">
    <span style="color:#fff; font-weight:bold;">Movie Bot</span>
    <button onclick="toggleSpeech()">ðŸ”ˆ</button>
  </div>
  
  <div id="chatlog"></div>

  <div id="input-area">
    <input type="text" id="user-input" placeholder="Ask me anything...">
    <button onclick="sendMessage()">âž¤</button>
  </div>
</div>

<script>
  // Toggle chatbot menu
  function toggleChatbot() {
    const chatbotMenu = document.getElementById('chatbot-menu');
    const isVisible = chatbotMenu.style.right === '0px';
    chatbotMenu.style.right = isVisible ? '-320px' : '0px';
  }

  let speechEnabled = true;
  const synth = window.speechSynthesis;

  function speak(text) {
    if (!speechEnabled) return;
    const utterance = new SpeechSynthesisUtterance(text);
    synth.speak(utterance);
  }

  function addUserMessage(text) {
    const msg = document.createElement('div');
    msg.className = 'user';
    msg.textContent = text;
    document.getElementById('chatlog').appendChild(msg);
    document.getElementById('chatlog').scrollTop = document.getElementById('chatlog').scrollHeight;
  }

  function addBotMessage(text) {
    const msg = document.createElement('div');
    msg.className = 'bot';
    msg.textContent = text;
    document.getElementById('chatlog').appendChild(msg);
    document.getElementById('chatlog').scrollTop = document.getElementById('chatlog').scrollHeight;
  }

  function sendMessage() {
    const inputField = document.getElementById('user-input');
    const userInput = inputField.value.trim();
    if (!userInput) return;

    addUserMessage(userInput);
    inputField.value = '';

    const botMsg = document.createElement('div');
    botMsg.className = 'bot';
    botMsg.textContent = 'Typing...';
    document.getElementById('chatlog').appendChild(botMsg);

    fetch('https://openrouter.ai/api/v1/chat/completions', {
      method: 'POST',
      headers: {
        'Authorization': 'Bearer YOUR_API_KEY',
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        model: 'mistralai/mistral-7b-instruct:free',
        messages: [{ role: 'user', content: userInput }],
      }),
    })
    .then(response => response.json())
    .then(data => {
      const responseText = data.choices?.[0]?.message?.content || 'Sorry, I could not understand that.';
      botMsg.textContent = responseText;
      speak(responseText);
    })
    .catch(error => {
      console.error('Error:', error);
      botMsg.textContent = 'Oops! Something went wrong. Please try again later.';
    });
  }

  // Speech Toggle
  function toggleSpeech() {
    speechEnabled = !speechEnabled;
    document.querySelector('#chatbot-header button').textContent = speechEnabled ? 'ðŸ”ˆ' : 'ðŸ”‡';
  }

  document.getElementById('user-input').addEventListener('keypress', (event) => {
    if (event.key === 'Enter') {
      sendMessage();
    }
  });
</script>

</body>
</html>
